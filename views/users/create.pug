extends ../layouts/common
block content 
    h1 Create user
    if errors
        each error in errors
            .alert.alert-danger= error
    form(action="/users/create", method="POST",enctype="multipart/form-data")
        .form-group
            label(for="name") Name
            input#name(name="name",type="text", class="form-control", value=values?values.name:'')
        .form-group
            label(for="phone") Phone
            input#phone(name="phone",type="number", class="form-control",value=values?values.phone:'')
        .form-group
            label(for="avatar") Avatar
            input#avatar(name="avatar",type="file", class="form-control-file")
        button.btn.btn-primary Create