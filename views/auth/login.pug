extends ../layouts/common
block content 
    h1 Login
    if errors
        each error in errors
            .alert.alert-danger= error
    form(action="/auth/login", method="POST")
        .form-group
            label(for="email") Email
            input#email(name="email",type="email", class="form-control", value=values?values.email:'')
        .form-group
            label(for="password") Password
            input#password(name="password",type="password", class="form-control",value=values?values.password:'')
        button.btn.btn-primary Login